	<script type="text/javascript" src="../script/api.js"></script>
	<script type="text/javascript">
		// 隐藏所有的一级frame
		var list = new Array([10]);
		var save = new Array([10]);
		list[0] = 'module0';
		list[1] = 'module1';
		list[2] = 'module2';
		list[2] = 'module2';
		list[3] = 'module3';
		list[4] = 'module4';
		list[5] = 'module5';
		list[6] = 'module6';
		list[7] = 'module7';
		list[8] = 'module8';
		list[9] = 'module9';
		var j = 0;
		var i;
		var name;
		// 完成首页初始化
		apiready = function() {
			name = api.pageParam.name;
			var model = api.require('model');
			var query = api.require('query');
			api.setCustomRefreshHeaderInfo({
				visible : true,
				bgColor : '#ccc',
				textColor : '#fff',
				textDown : '下拉刷新',
				textUp : '松开刷新',
				showTime : true
			}, function(ret, err) {
				if (ret) {
					alert("正在用力刷新");
					query.createQuery({
					}, function(ret, err) {
						//coding...
						if (ret) {
							model.count({
								class : 'menu',
								qid : ret.qid
							}, function(ret, err) {
								//coding...
								if (ret) {
									var count = ret.count;
									model.findAll({
										class : 'menu',
										qid : ret.qid
									}, function(ret, err) {
										//coding...
										if (ret) {
											for ( i = 0; i < count; i++) {
												var a = ret[i].table;
												var b = a.substr(0, name.length);
												if (ret[i].ask != 1 && b == name) {
													var table = ret[i].table;
													var id = ret[i].id;
													model.updateById({
														class : 'menu',
														id : id,
														value : {
															ask : '1'
														}
													}, function(ret, err) {
														//coding...
													});
													document.getElementById(list[j]).innerHTML = table;
													save[j] = table;
													j++;
												} else {
												}
											}
										}
									});
								}
							});
							api.refreshHeaderLoadDone();
						}
					});
				}
			});
		}
		function page(type) {
			api.openWin({
				name : 'detail',
				url : './detail.html',
				pageParam : {
					name : type
				},
				bounces : false,
				opaque : false
			});
		}
