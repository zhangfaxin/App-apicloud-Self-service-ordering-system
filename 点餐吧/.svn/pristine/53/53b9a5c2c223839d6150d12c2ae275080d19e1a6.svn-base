	</head>
	<body>
		<div class="header detail-header">
			<div class="back login-header-btn" tapmode="" onclick=""></div>
			<div class="title" id="title">
				注册
			</div>
			<div class="login-header-btn"></div>
		</div>
		<div class="divider"></div>
		<form action="">
			<div class="item nickname"><img src="../../image/login01.png" alt="">
				<input type="text" placeholder="昵称" id="nickname">
			</div>
			<div class="item email"><img src="../../image/login01.png" alt="">
				<input type="text" placeholder="邮箱/手机号/用户名" id="email">
			</div>
			<div class="item passwd"><img src="../../image/login02.png" alt="">
				<input type="password" placeholder="密码" id="passwd">
			</div>
			<div class="item secretword"><img src="../../image/login03.png" alt="">
				<input type="text" placeholder="验证码" id="secretword">
				<div class="secretimg"><img src="../../image/secretword.png">
				</div>
			</div>
			<div class="btn" tapmode="buyhover" onclick="register()">
				<button type="submit">
					点击注册
				</button>
			</div>
		</form>
		<div class="divider" id="bottomdivider"></div>
	</body>
	<script type="text/javascript" src="../../script/api.js"></script>
	<script type="text/javascript">
		function openLoginmore() {
			api.openFrame({
				name : 'loginmore',
				url : './loginmore.html',
				rect : {
					x : 0,
					y : headerHeight,
					w : 'auto',
					h : 'auto'
				},
				bounces : false,
				delay : 200
			});
		}

		function register() {
			var email = $api.val($api.byId('email'));
			var password = $api.val($api.byId('passwd'));
			var secretword = $api.val($api.byId('secretword'));
			var nickname = $api.val($api.byId('nickname'));
			var model = api.require('model');
			var query = api.require('query');
			var count, secretword;
			if (email.length <= 0) {
				alert("请输入账号");
			} else if (password.length <= 0) {
				alert("请输入密码");
			} else if (secretword.length <= 0) {
				alert("请输入验证码");
			} else if (secretword != '5cat38') {
				alert("验证码错误");
			} else if (password.length > 0 && email.length > 0 && secretword == '5cat38') {
				api.showProgress({
					style : 'default',
					animationType : 'fade',
					title : '努力加载中...',
					text : '先喝杯茶...',
					modal : false
				});
				query.createQuery({
				}, function(ret, err) {
					if (ret && ret.qid) {
						model.count({
							class : 'userdata',
							qid : ret.qid
						}, function(ret, err) {
							if (ret) {
								count = ret.count;
								model.findAll({
									class : 'userdata',
									qid : ret.qid
								}, function(ret, err) {
									//coding...
									if (ret) {
										for (var i = 0; i < count; i++) {
											if (ret[i].username == email) {
												api.hideProgress();
												alert("账号已注册");
												break;
											}
										}
										if (i == count) {
											model.insert({
												class : 'userdata',
												value : {
													username : email,
													password : password,
													nickname : nickname
												}
											}, function(ret, err) {
												//coding...
												if (ret) {
													api.hideProgress();
													api.alert({
														title : '注册成功',
														buttons : ['确定']
													}, function(ret, err) {
														//coding...
														if (ret.buttonIndex == 1) {
															api.closeWin();
														}
													});
												}
											});
										}
									}
								});
							}
						});
					}
				});
			}
		}
	</script>
</html>